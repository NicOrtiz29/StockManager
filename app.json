{
  "expo": {
    "name": "stock-manager",
    "slug": "stock-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Necesitamos acceso a tu cámara para escanear códigos de barras"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos acceso a tu cámara para escanear códigos de barras",
        "NSPhotoLibraryUsageDescription": "Permite a la aplicación acceder a tus fotos para subir imágenes de productos"
      },
      "bundleIdentifier": "com.tudominio.stockmanager"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.tudominio.stockmanager"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "tu-project-id"
      }
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}